# ================================
# PRODUCTION ENVIRONMENT TEMPLATE
# ================================
# Copy this file to .env for production deployment

NODE_ENV=production
PORT=8080

# ================================
# Production Database Configuration
# ================================
# Replace with your production database details
DB_NAME=urlshortner_prod
DB_USER=prod_user
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_DIALECT=mysql

# ================================
# Production Security
# ================================
# Generate a strong JWT secret for production
JWT_SECRET=REPLACE_WITH_STRONG_JWT_SECRET

# Production domain(s) for CORS
CORS_ORIGIN=https://yourdomain.com

# ================================
# Cloud Platform Examples
# ================================

# === HEROKU ===
# Heroku automatically sets PORT
# Use JawsDB MySQL add-on or ClearDB
# Example: DATABASE_URL=mysql://user:pass@host:port/dbname

# === RAILWAY ===
# Railway can auto-provision MySQL
# Use provided DATABASE_URL or individual variables

# === VERCEL ===
# Use PlanetScale or another serverless MySQL provider
# Set each variable in Vercel dashboard

# === AWS ===
# Use RDS for managed MySQL
# Set security groups to allow your application's IP

